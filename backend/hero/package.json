{
    "name": "hero",
    "version": "1.0.0",
    "description": "",
    "main": "server.ts",
    "scripts": {
        "build": "tsup",
        "build:ts": "tsup --env.NODE_ENV production",
        "copy:assets": "cpy 'src/generated/*.json' dist/generated",
        "dev": "npm run dev:watch",
        "dev:watch": "tsx watch --clear-screen=false server.ts",
        "start": "tsx server.ts",
        "start:prod": "node dist/server.js",
        "typecheck": "tsc -b"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@trpc/server": "^10.7.0",
        "cors": "^2.8.5",
        "database": "workspace:*",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "superjson": "^1.12.1",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "eslint-config-custom-react": "workspace:*",
        "morgan": "^1.10.0",
        "ts-node": "^10.9.1",
        "tsup": "^6.5.0",
        "tsx": "^3.12.1",
        "typescript": "^4.9.4",
        "eslint": "^8.31.0"
    },
    "tsup": {
        "entry": [
            "**/*.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true,
        "format": [
            "cjs"
        ],
        "target": "es2018",
        "onSuccess": "npm run copy:assets"
    }
}
