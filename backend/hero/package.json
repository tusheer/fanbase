{
    "name": "hero",
    "version": "1.0.0",
    "description": "",
    "main": "./server.ts",
    "scripts": {
        "build": "tsup",
        "build:ts": "tsup --env.NODE_ENV production",
        "copy:assets": "cpy 'src/generated/*.json' dist/generated",
        "dev": "npm run dev:watch",
        "dev:watch": "tsx watch --clear-screen=false server.ts",
        "start": "tsx server.ts",
        "start:prod": "node dist/server.js",
        "typecheck": "tsc -b"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@trpc/server": "^10.8.1",
        "argon2": "^0.30.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "database": "*",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-useragent": "^1.0.15",
        "jsonwebtoken": "^9.0.0",
        "nanoid": "^4.0.0",
        "nookies": "^2.5.2",
        "redis": "^4.5.1",
        "schema": "*",
        "superjson": "^1.12.1",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/express-useragent": "^1.0.2",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "concurrently": "^7.6.0",
        "eslint": "^8.31.0",
        "eslint-config-custom-node": "*",
        "morgan": "^1.10.0",
        "ts-node": "^10.9.1",
        "tsup": "^6.5.0",
        "tsx": "^3.12.1",
        "typescript": "^4.9.4"
    },
    "tsup": {
        "entry": [
            "server.ts"
        ],
        "treeshake": true,
        "sourcemap": true,
        "minify": true,
        "clean": true,
        "dts": true,
        "splitting": false,
        "format": [
            "cjs",
            "esm"
        ],
        "external": [
            "node"
        ]
    }
}
