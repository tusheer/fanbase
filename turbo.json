{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build", "^db:generate"],
            "outputs": ["dist/**", ".next/**"]
        },
        "lint": {
            "outputs": [],
            "cache": false
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        }
    },
    "globalDependencies": [".env"],
    "globalEnv": ["API", "MONGODB_URI", "NODE_ENV"]
}
